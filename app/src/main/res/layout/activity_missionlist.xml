<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".missionlist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/top"
            tools:ignore="DuplicateIds,MissingConstraints">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_marginLeft="19.05dp"
                android:layout_marginTop="33.9dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31.62dp"
                android:gravity="center"
                android:text="任務清單"
                android:textColor="#F3BA55"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76.19dp">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="雙擊心心 (0/1)"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="收藏一則推播訊息"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibtn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:background="#00ffffff"
                android:src="@drawable/diamondbackground" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:paddingLeft="10dp"
                android:text="x 5"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/reach_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:visibility="gone"
                android:src="@drawable/reach" />
        </RelativeLayout>
        <View
            android:layout_width="380.95dp"
            android:layout_height="1.90dp"
            android:layout_marginLeft="15.24dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76.19dp">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="推播大使 (0/1)"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="發布一則推播訊息"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibtn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:background="#00ffffff"
                android:src="@drawable/diamondbackground" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:paddingLeft="10dp"
                android:text="x 5"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/reach_2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="26dp"
                android:visibility="gone"
                android:src="@drawable/reach" />
        </RelativeLayout>
        <View
            android:layout_width="380.95dp"
            android:layout_height="1.90dp"
            android:layout_marginLeft="15.24dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76.19dp">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="好讚友 (0/1)"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="對一則推播訊息點擊讚或倒讚"
                android:textSize="13sp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/ibtn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:background="#00ffffff"
                android:src="@drawable/diamondbackground" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:paddingLeft="10dp"
                android:text="x 5"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/reach_3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="26dp"
                android:visibility="gone"
                android:src="@drawable/reach" />
        </RelativeLayout>
        <View
            android:layout_width="380.95dp"
            android:layout_height="1.90dp"
            android:layout_marginLeft="15.24dp"
            android:background="#D9D9D9"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>